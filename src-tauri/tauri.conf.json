{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ChatMe",
  "version": "0.3.2",
  "identifier": "com.amanpreet.chatme",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ChatMe",
        "width": 1000,
        "height": 600,
        "decorations": false,
        "titleBarStyle": "Transparent",
        "resizable": true,
        "minWidth": 320,
        "minHeight": 480
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "opener": {
      "requireLiteralLeadingDot": false
    }
  }
}
